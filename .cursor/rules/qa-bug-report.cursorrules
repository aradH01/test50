{
  "name": "QA Bug Report Rules",
  "description": "Standardized structure for QA bug reports",
  "rules": [
    "Include clear, concise title summarizing the issue.",
    "Document environment: OS, browser, device, screen resolution, user role.",
    "Describe expected vs actual behavior.",
    "Provide step-by-step reproduction instructions.",
    "Assign severity: Critical, High, Medium, Low, Trivial.",
    "Attach screenshots, videos, or logs if applicable.",
    "Include additional notes or possible fixes when relevant.",
    "One issue per bug report only.",
    "Bug reports must follow template: Steps to Reproduce, Expected Result, Actual Result, Screenshots/Logs.",
    "Always assign severity and priority.",
    "Link to related test cases if available.",
    "Never mix bug report content with feature requests.",
    "Always mention new test files generated in the PR description.",
    "Never allow merging without at least one reviewer approval."
  ]
}
